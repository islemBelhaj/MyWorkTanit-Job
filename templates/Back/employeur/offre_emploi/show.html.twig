{% extends 'base.html.twig' %}

{% block title %}OffreEmploi{% endblock %}

{% block body %}
    <h1>OffreEmploi</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre_emploi.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ offre_emploi.titre }}</td>
            </tr>
            <tr>
                <th>NbrePostVacant</th>
                <td>{{ offre_emploi.nbrePostVacant }}</td>
            </tr>
            <tr>
                <th>RemunirationPropose</th>
                <td>{{ offre_emploi.remunirationPropose }}</td>
            </tr>
            <tr>
                <th>DescriptionEmploi</th>
                <td>{{ offre_emploi.descriptionEmploi }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ offre_emploi.experience }} ans</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if offre_emploi.statut == 0 %}
                        <p>en Attente</p>
                    {% endif %}

                    {% if offre_emploi.statut == 1 %}
                        <p>Offre Acceptée</p>
                    {% endif %}

                    {% if offre_emploi.statut ==2 %}
                        <p>Offre Refusée</p>
                    {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offre_emploi_index') }}">back to list</a>

    <a href="{{ path('app_offre_emploi_edit', {'id': offre_emploi.id}) }}">edit</a>

    {{ include('Back/employeur/offre_emploi/_delete_form.html.twig') }}
{% endblock %}
